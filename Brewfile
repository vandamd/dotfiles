# Vandam's Brewfile

tap "homebrew/bundle"
tap "homebrew/cask"
tap "homebrew/core"
tap "homebrew/services"
tap "homebrew/cask-drivers"

cask_args appdir: "/Applications"

# CLI Tools
brew "mas"                          # Mac App Store CLI
brew "zola"                         # Static Site Generator
brew "pyenv"                        # Python Version Manager
brew "python"                       # Python
brew "stow"                         # Symlink Manager

# Applications
cask "arc"                          # Browser
cask "iterm2"                       # Terminal
# cask "spotify"                      # Music
cask "visual-studio-code"           # IDE

# Tools/Misc
cask "dozer"                        # Hide Menu Bar Icons
# cask "karabiner-elements"           # Keyboard Re-mapper
cask "pictogram"                    # App Icon Changer
cask "raycast"                      # Spotlight Alternative
cask "shottr"                       # Screenshot Tool
# cask "zotero"                       # Reference Manager
cask "hyperkey"                     # Hyper Key

# App Store
mas "Pure Paste", id: 1611378436    # Clipboard Manager
mas "Sleeve", id: 1606145041        # Mini Player